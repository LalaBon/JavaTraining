        hash_map.put("Green", 2);
        hash_map.put("Purple", 3);
        hash_map.put("Pink", 4);
        hash_map.put("Silver", 5);

        System.out.println("The Original map" + hash_map);
        System.out.println("1. Is key 'Green' exists?");
        if (hash_map.containsKey("Green")) {

            System.out.println("yes! - " + hash_map.get("Green"));
        } else {
            System.out.println("no!");
        }

        System.out.println("\n2. Is key 'Yellow' exists?");
        if (hash_map.containsKey("yellow")) {
            System.out.println("yes! - " + hash_map.get("yellow"));

        } else {
            System.out.println("no!"); 
        }
    }
}
